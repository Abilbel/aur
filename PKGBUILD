pkgname=python-fontaine
pkgver=1.4.0
pkgrel=1
pkgdesc="Font analysis tool for determining character/glyph support"
arch=(any)
url="https://github.com/googlefonts/pyfontaine"
license=(GNU GPLv3)
makedepends=("python" "python-pip")
build() {
  pip install --no-deps --target="fontaine" fontaine==1.4.0
}
package() {
  sitepackages=$(python -c "import site; print(site.getsitepackages()[0])")
  mkdir -p $pkgdir/"$sitepackages"
  cp -r $srcdir/fontaine/* $pkgdir/"$sitepackages"
}